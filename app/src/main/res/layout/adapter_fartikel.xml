<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="10dp"-->
<!--        android:layout_weight="1"-->
<!--        app:cardCornerRadius="8dp"-->
<!--        app:cardElevation="5dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/art_list_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="YUKITO"
                    android:textColor="#5E5E5E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/art_list_season"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="JUNE 2021"
                    android:textColor="#5E5E5E"
                    android:textSize="15dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Departement : "
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/art_list_departement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="FOOTWEAR"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Kelompok : "
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/art_list_kelompok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="WOMAN"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Subkelompok : "
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/art_list_subkelompok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="LOAFERS"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Achievement : "
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/art_list_achievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rp. 12.999.999 (12 Pcs)"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Sales : "
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/art_list_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rp. 100.000 (12 Pcs)"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Exchange : "
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/art_list_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Rp. 100.000 (12 Pcs)"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>

<!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>