<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:id="@+id/CardRecycle"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:layout_gravity="end"
            app:cardElevation="10dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/hm_list_itemqty"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:text="99999"
                android:textColor="#5E5E5E"
                android:textSize="13dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/putih_pucat"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_height="130dp">

                <com.clzola.glottie.GlottieView
                    android:id="@+id/hm_list_gambar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_loop="true"
                    app:lottie_fileName="loading_image.json"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/hm_laystock"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="STOCK : "
                        android:textColor="#5E5E5E"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/hm_list_stock"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="20 Pcs"
                        android:textColor="#5E5E5E"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/hm_list_itemcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="1010019940340"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/hm_list_itemname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="ADELICIA BLACK 38"
                    android:textColor="#5E5E5E"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>